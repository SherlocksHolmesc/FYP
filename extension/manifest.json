{
  "manifest_version": 3,
  "name": "Web3 Risk Guard (MVP)",
  "version": "0.3.0",
  "description": "AI-powered security extension for Ethereum that protects users from scams, phishing, and malicious contracts",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["storage", "tabs", "activeTab", "notifications"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inpage.js", "data/darklist.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
